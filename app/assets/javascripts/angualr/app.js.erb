'use strict'

var app = angular.module('hksa_site', ['ngRoute']);

app.config(['$routeProvider', function($routeProvider){
  $routeProvider
    .when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'staticPagesCtrl'
    })
    .when('/people', {
      templateUrl: "<%= asset_path('people/index.html')%>",
      controller: 'peopleCtrl'
    })
    .when('/event', {
      templateUrl: "<%= asset_path('event/index.html')%>",
      controller: 'eventCtrl'
    })
}])